{
  "id": null,
  "uid": "coupon-consumer-prometheus",
  "title": "Coupon Consumer Server - Dashboard",
  "editable": true,
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 3,
  "refresh": "5s",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Kafka Listener Processed Count",
      "id": 1,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "sum(rate(spring_kafka_listener_seconds_count{instance=\"host.docker.internal:8083\"}[1m])) by (listener_id)",
          "refId": "A",
          "legendFormat": "{{listener_id}} Processed Count"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Messages / sec",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Consumer Lag Count (issue)",
      "id": 2,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "sum(spring_kafka_listener_records_lag{group=\"group_1\", topic=\"coupon_issue\"})",
          "refId": "A",
          "legendFormat": "Max Lag"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": [
            "last"
          ],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Consumer Lag Count (retry)",
      "id": 3,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "sum(spring_kafka_listener_records_lag{group=\"group_1\", topic=\"coupon_issue_retry\"})",
          "refId": "A",
          "legendFormat": "Max Lag (Retry)"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": [
            "last"
          ],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Kafka Listener Error Rate",
      "id": 4,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(spring_kafka_listener_seconds_count{instance=\"host.docker.internal:8083\", result=\"failure\"}[1m])) by (listener_id) / sum(rate(spring_kafka_listener_seconds_count{instance=\"host.docker.internal:8083\"}[1m])) by (listener_id)",
          "refId": "A",
          "legendFormat": "{{listener_id}} - Error Rate"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Error Rate (%)",
          "min": 0,
          "max": 100,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Listener Processing Time (Avg)",
      "id": 5,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "(sum(rate(spring_kafka_listener_seconds_sum{instance=\"host.docker.internal:8083\"}[1m])) by (listener_id) / sum(rate(spring_kafka_listener_seconds_count{instance=\"host.docker.internal:8083\"}[1m])) by (listener_id)) * 1000",
          "refId": "A",
          "legendFormat": "{{listener_id}} Avg Time (ms)"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Time (ms)",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Listener Processing Time (Max)",
      "id": 6,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "spring_kafka_listener_seconds_max{instance=\"host.docker.internal:8083\"} * 1000",
          "refId": "A",
          "legendFormat": "{{listener_id}} Max Time (ms)"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Time (ms)",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Threads",
      "id": 7,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "jvm_threads_live_threads{instance=\"host.docker.internal:8083\"}",
          "refId": "A",
          "legendFormat": "Live"
        },
        {
          "expr": "jvm_threads_daemon_threads{instance=\"host.docker.internal:8083\"}",
          "refId": "B",
          "legendFormat": "Daemon"
        },
        {
          "expr": "jvm_threads_peak_threads{instance=\"host.docker.internal:8083\"}",
          "refId": "C",
          "legendFormat": "Peak"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count",
          "min": 0,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Threads Status",
      "id": 8,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "jvm_threads_states_threads{instance=\"host.docker.internal:8083\", state=~\"runnable|blocked|waiting|timed_waiting\"}",
          "refId": "A",
          "legendFormat": "{{state}}"
        }
      ],
      "stack": true,
      "yaxes": [
        {
          "format": "short",
          "label": "Count",
          "min": 0,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "id": 9,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "system_cpu_usage{instance=\"host.docker.internal:8083\"} * 100",
          "refId": "A",
          "legendFormat": "System"
        },
        {
          "expr": "process_cpu_usage{instance=\"host.docker.internal:8083\"} * 100",
          "refId": "B",
          "legendFormat": "Process"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU Usage (%)",
          "min": 0,
          "max": 100,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 16
      }
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Memory",
      "id": 10,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "sum without (id) (jvm_memory_used_bytes{area=\"heap\", instance=\"host.docker.internal:8083\"}) / (1024*1024)",
          "refId": "A",
          "legendFormat": "{{instance}} Heap Used"
        },
        {
          "expr": "sum without (id) (jvm_memory_max_bytes{area=\"heap\", instance=\"host.docker.internal:8083\"}) / (1024*1024)",
          "refId": "B",
          "legendFormat": "{{instance}} Heap Max"
        }
      ],
      "yaxes": [
        {
          "format": "mbytes",
          "label": "Memory (MB)",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 16
      }
    },
    {
      "type": "timeseries",
      "title": "DB Active Connections",
      "id": 11,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "hikaricp_connections_active{instance=\"host.docker.internal:8083\"}",
          "refId": "A",
          "legendFormat": "{{pool}} Active"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 16
      }
    },
    {
      "type": "timeseries",
      "title": "DB Pending Connections",
      "id": 12,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "hikaricp_connections_pending{instance=\"host.docker.internal:8083\"}",
          "refId": "A",
          "legendFormat": "{{pool}} Pending"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count",
          "min": 0,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 16
      }
    }
  ],
  "tags": [
    "coupon-consumer-server",
    "performance"
  ]
}