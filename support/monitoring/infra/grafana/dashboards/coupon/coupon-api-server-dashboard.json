{
  "id": null,
  "uid": "coupon-api-prometheus",
  "title": "Coupon API Server - Dashboard",
  "editable": true,
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 3,
  "refresh": "5s",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "TPS (req/s)",
      "id": 1,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{uri=~\"/api/coupon/.*/issue/test\"}[1m])",
          "refId": "A",
          "legendFormat": "{{uri}} {{instance}} - TPS"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "req/s",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Average Response Time (ms)",
      "id": 2,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "(rate(http_server_requests_seconds_sum{uri=~\"/api/coupon/.*/issue/test\"}[1m]) / rate(http_server_requests_seconds_count{uri=~\"/api/coupon/.*/issue/test\"}[1m])) * 1000",
          "refId": "A",
          "legendFormat": "{{uri}} {{instance}} - Avg Response Time"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Time (ms)",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Request Count (Total)",
      "id": 3,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "sum(http_server_requests_seconds_count{instance=\"host.docker.internal:8082\"})",
          "refId": "A",
          "legendFormat": "{{uri}} {{instance}} - Request Count"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "5xx Error Rate (%)",
      "id": 4,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(http_server_requests_seconds_count{uri=~\"/api/coupon/.*/issue/test\", status=~\"5..\"}[1m])) by (job, instance, uri) / sum(rate(http_server_requests_seconds_count{uri=~\"/api/v[12]/coupon/.*/issue/test\"}[1m])) by (job, instance, uri)",
          "refId": "A",
          "legendFormat": "{{uri}} {{instance}} - 5xx Error Rate"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Error Rate (%)",
          "min": 0,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "id": 5,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "system_cpu_usage{instance=\"host.docker.internal:8082\"} * 100",
          "refId": "A",
          "legendFormat": "System"
        },
        {
          "expr": "process_cpu_usage{instance=\"host.docker.internal:8082\"} * 100",
          "refId": "B",
          "legendFormat": "Process"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU Usage (%)",
          "min": 0,
          "max": 100,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Memory",
      "id": 6,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "sum without (id) (jvm_memory_used_bytes{area=\"heap\", instance=\"host.docker.internal:8082\"}) / (1024*1024)",
          "refId": "A",
          "legendFormat": "{{instance}} App Heap Used (MB)"
        },
        {
          "expr": "sum without (id) (jvm_memory_max_bytes{area=\"heap\", instance=\"host.docker.internal:8082\"}) / (1024*1024)",
          "refId": "B",
          "legendFormat": "{{instance}} App Heap Max (MB)"
        }
      ],
      "yaxes": [
        {
          "format": "mbytes",
          "label": "Memory (MB)",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Threads (Live, Daemon, Peak)",
      "id": 7,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "jvm_threads_live_threads{instance=\"host.docker.internal:8082\"}",
          "refId": "A",
          "legendFormat": "Live"
        },
        {
          "expr": "jvm_threads_daemon_threads{instance=\"host.docker.internal:8082\"}",
          "refId": "B",
          "legendFormat": "Daemon"
        },
        {
          "expr": "jvm_threads_peak_threads{instance=\"host.docker.internal:8082\"}",
          "refId": "C",
          "legendFormat": "Peak"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count",
          "min": 0,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Threads Status",
      "id": 8,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "jvm_threads_states_threads{instance=\"host.docker.internal:8082\", state=~\"runnable|blocked|waiting|timed_waiting\"}",
          "refId": "A",
          "legendFormat": "{{state}}"
        }
      ],
      "stack": true,
      "yaxes": [
        {
          "format": "short",
          "label": "Count",
          "min": 0,
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Redis CPU Usage",
      "id": 9,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "rate(redis_cpu_user_seconds_total[1m]) * 100",
          "refId": "A",
          "legendFormat": "{{instance}} - CPU User (%)"
        },
        {
          "expr": "rate(redis_cpu_system_seconds_total[1m]) * 100",
          "refId": "B",
          "legendFormat": "{{instance}} - CPU System (%)"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU Utilization (%)",
          "min": 0,
          "show": true
        },
        {
          "show": false
        }
      ],
      "stack": true,
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 16
      }
    },
    {
      "type": "timeseries",
      "title": "Redis Memory Usage",
      "id": 10,
      "datasource": "coupon-prometheus",
      "targets": [
        {
          "expr": "redis_memory_used_bytes / (1024*1024)",
          "refId": "A",
          "legendFormat": "{{instance}} - Used Memory (MB)"
        }
      ],
      "yaxes": [
        {
          "format": "mbytes",
          "label": "Memory (MB)",
          "show": true
        },
        {
          "show": false
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 16
      }
    }
  ],
  "tags": [
    "coupon-api-server",
    "redis",
    "performance"
  ]
}